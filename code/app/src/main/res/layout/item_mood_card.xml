<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#660FA3B1"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgMood"
                android:layout_width="108dp"
                android:layout_height="97dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_card"
                android:backgroundTint="#0FA3B1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_mood"
                app:tint="#F9F7F3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMoodTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/itim_regular"
                    android:text="[User] is feeling [emotion]"
                    android:textColor="#F9F7F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMoodDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/itim_regular"
                    android:text="Brief Description of Mood Event"
                    android:textColor="#F9F7F3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvMoodTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/itim_regular"
                    android:text="#mood"
                    android:textColor="#F9F7F3"
                    android:textSize="14sp" />

                <!-- New Date Section (Bottom-Right) -->
                <TextView
                    android:id="@+id/tvMoodDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end"
                    android:fontFamily="@font/itim_regular"
                    android:text="Jan 01, 2024"
                    android:textColor="#F9F7F3"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_gravity="end" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>

