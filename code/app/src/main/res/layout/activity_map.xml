<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="0dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvMapTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/itim_regular"
        android:text="MAP OF MOOD EVENTS"
        android:textColor="#0FA3B1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <!-- Filter -->
    <Spinner
        android:id="@+id/spinnerMapFilter"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tvMapTitle"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#0FA3B1"
        android:popupBackground="@drawable/rounded_card" />

    <!-- Google Map Fragment -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvMapTitle"
        android:layout_above="@id/bottomNavBar"
        android:layout_marginTop="10dp">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!-- Bottom Navigation Bar -->
    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/bottom_bar_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp" />
</RelativeLayout>
