<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card"
    android:backgroundTint="#E9D8A6"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/itim_regular"
        android:text="Filter Moods"
        android:textColor="#001219"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/itim_regular"
        android:text="Time Range"
        android:textColor="#001219"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <CheckBox
        android:id="@+id/checkBoxRecent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/itim_regular"
        android:text="Show moods from last 7 days"
        android:textColor="#001219"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/itim_regular"
        android:text="Select Moods"
        android:textColor="#001219"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <CheckBox
            android:id="@+id/checkBoxAnger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Anger"
            android:textColor="#001219"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBoxConfusion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Confusion"
            android:textColor="#001219"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBoxDisgust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Disgust"
            android:textColor="#001219"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBoxFear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Fear"
            android:textColor="#001219"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBoxHappiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Happiness"
            android:textColor="#001219"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBoxSadness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Sadness"
            android:textColor="#001219"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBoxShame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Shame"
            android:textColor="#001219"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/checkBoxSurprise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/itim_regular"
            android:text="Surprise"
            android:textColor="#001219"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/itim_regular"
        android:text="Search by Description"
        android:textColor="#001219"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#001219"
        android:fontFamily="@font/itim_regular"
        android:gravity="top"
        android:hint="Enter keywords..."
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#E9D8A6"
        android:textColorHint="#E9D8A6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClearFilters"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#001219"
            android:fontFamily="@font/itim_regular"
            android:text="Clear Filters"
            android:textColor="#E9D8A6"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#001219"
            android:fontFamily="@font/itim_regular"
            android:text="Apply"
            android:textColor="#E9D8A6"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
